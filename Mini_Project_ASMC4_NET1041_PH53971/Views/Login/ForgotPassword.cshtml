@{
    ViewBag.Title = "Quên mật khẩu";
}

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow p-4" style="width: 400px;">
        <h2 class="text-center text-warning mb-4">Quên mật khẩu</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                @ViewBag.Error
            </div>
        }

        @if (ViewBag.Password != null)
        {
            <div class="alert alert-success">
                Mật khẩu của bạn là: <strong>@ViewBag.Password</strong>
            </div>
        }

        <form asp-action="ForgotPassword" method="post">
            <div class="form-group mb-3">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" required />
            </div>
            <button type="submit" class="btn btn-warning w-100">Lấy lại mật khẩu</button>
        </form>

        <div class="text-center mt-3">
            <a href="@Url.Action("Login", "Login")" class="text-decoration-none">Quay lại đăng nhập</a>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/daodien/css/bootstrap.css">
<link rel="stylesheet" href="~/daodien/css/fonts.css">
<link rel="stylesheet" href="~/daodien/css/style.css">