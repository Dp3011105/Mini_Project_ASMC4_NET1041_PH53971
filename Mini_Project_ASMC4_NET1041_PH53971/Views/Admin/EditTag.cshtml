@model Mini_Project_ASMC4_NET1041_PH53971.Models.Tag

@{
    Layout = "~/views/shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Quản lý Tag";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditTag" method="post">
    <input type="hidden" name="MaTag" value="@Model.MaTag" />

    <div class="form-group">
        <label for="TenTag">Tên Tag</label>
        <input type="text" id="TenTag" name="TenTag" class="form-control" value="@Model.TenTag" required />
    </div>

    <div class="form-group">
        <label for="TrangThai">Trạng Thái</label>
        <select id="TrangThai" name="TrangThai" class="form-control" required>
            @if (Model.TrangThai)
            {
                <option value="true" selected>Kích hoạt</option>
                <option value="false">Vô hiệu hóa</option>
            }
            else
            {
                <option value="true">Kích hoạt</option>
                <option value="false" selected>Vô hiệu hóa</option>
            }

        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Cập nhật Tag</button>
</form>
