  @model IEnumerable<Mini_Project_ASMC4_NET1041_PH53971.Models.MonAn>
@{
    ViewData["Title"] = "";
}

<h1 class="text-center my-4">@ViewData["Title"]</h1>

<!-- Dropdown tìm kiếm theo Tag -->
<form method="get" class="mb-4">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="selectedTag">Chọn Tag:</label>
                <select name="selectedTag" id="selectedTag" class="form-control">
                    <option value="">-- Tất cả --</option>
                    @foreach (var tag in ViewBag.Tags as List<Tag>)
                    {
                        var selected = Context.Request.Query["selectedTag"] == tag.MaTag.ToString() ? "selected" : "";
                        <option value="@tag.MaTag">@tag.TenTag</option>
                    }
                </select>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="searchName">Tìm kiếm theo tên:</label>
                <input type="text" name="searchName" id="searchName" class="form-control" value="@Context.Request.Query["searchName"]" />
            </div>
        </div>
    </div>
    <br />
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    </div>
</form>

<!-- Hiển thị danh sách sản phẩm -->
<div class="row mt-4">
    @foreach (var product in Model)
    {
        // Kiểm tra TrangThai có phải true không (có giá trị không phải null và true)
        if (product.TrangThai.HasValue && product.TrangThai.Value)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow">
                    <img src="@product.DuongDanHinh" class="card-img-top img-fluid" alt="@product.TenMonAn" style="object-fit: cover; height: 200px;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-center">@product.TenMonAn</h5>
                        <p class="card-text text-muted">@product.MoTa</p>
                        <p class="card-text text-danger fw-bold">Giá: @product.Gia.ToString("N0") VND</p>
                        <a href="@Url.Action("Details", "KhachHang", new { id = product.MaMonAn })" class="btn btn-primary mt-auto">Chi tiết</a>
                    </div>
                </div>
            </div>
        }
    }

</div>






