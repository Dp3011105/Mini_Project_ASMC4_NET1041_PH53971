
<link rel="stylesheet" href="~/daodien/css/bootstrap.css">
<link rel="stylesheet" href="~/daodien/css/fonts.css">
<link rel="stylesheet" href="~/daodien/css/style.css">

@model Mini_Project_ASMC4_NET1041_PH53971.Models.ComboDetailsViewModel

<h2 class="text-center my-4 text-primary fw-bold">Chi Tiết Combo: @Model.Combo.TenCombo</h2>

<div class="card mx-auto shadow" style="max-width: 600px;">
    <img class="card-img-top img-fluid" src="@Model.Combo.DuongDanHinh" alt="@Model.Combo.TenCombo" style="object-fit: cover; height: 300px;">
    <div class="card-body">
        <h5 class="card-title text-primary">Tên Combo:</h5>
        <p class="card-text">@Model.Combo.TenCombo</p>
        <h5 class="card-title text-danger fw-bold">Giá:</h5>
        <p class="card-text text-danger">@Model.Combo.Gia.ToString("N0") VND</p>
        <h5 class="card-title text-muted">Mô tả:</h5>
        <p class="card-text">@Model.Combo.MoTa</p>
    </div>
</div>

<h3 class="text-center my-4 text-success fw-bold">Các Món Ăn Trong Combo</h3>
<div class="list-group shadow-sm">
    @foreach (var item in Model.MonAnsInCombo)
    {
        <div class="list-group-item mb-2">
            <h5 class="text-primary fw-bold">@item.MaMonAnNavigation.TenMonAn</h5>
            <p class="mb-1">@item.MaMonAnNavigation.MoTa</p>
            <p class="text-success mb-1"><strong>Số lượng:</strong> @item.SoLuong</p>
            <p class="text-danger fw-bold">Giá: @item.MaMonAnNavigation.Gia.ToString("N0") VND</p>
        </div>
    }
</div>

<h4 class="text-center mt-4 text-warning fw-bold">Thêm Combo vào giỏ hàng</h4>
<form action="@Url.Action("AddCombo", "GioHang")" method="post" class="mx-auto" style="max-width: 600px;">
    <input type="hidden" name="maCombo" value="@Model.Combo.MaCombo" />
    <div class="form-group">
        <label for="soLuong" class="fw-bold">Số lượng:</label>
        <input type="number" name="soLuong" id="soLuong" value="1" min="1" class="form-control w-50 mx-auto" required />
    </div>
    <button type="submit" class="btn btn-primary mt-3 w-100">Thêm vào giỏ hàng</button>
</form>
